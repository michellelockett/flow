rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userID}/{document=**} {
      allow create: if request.auth.uid != null
      allow get, update: if request.auth.uid == userID
    }

    match /apps/{appID} {
      allow get
      allow create: if request.auth.uid != null
      allow list, update, delete: if request.auth.uid in get(/databases/$(database)/documents/apps/$(appID)).data.users
    }

    match /flows/{flowID}/{document=**} {
      allow get
      allow create: if request.auth.uid != null
      allow list, update, delete: if request.auth.uid in get(/databases/$(database)/documents/flows/$(flowID)).data.users

      match /steps/{stepID} {
        allow read
        allow write: if request.auth.uid in get(/databases/$(database)/documents/flows/$(flowID)).data.users
      }
    }

    match /experiments/{flowID}/{document=**} {
      allow read
      allow create, update, delete: if request.auth.uid in get(/databases/$(database)/documents/flows/$(flowID)).data.users
    }
  }
}
